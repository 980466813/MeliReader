<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/md_white"
    android:maxHeight="@dimen/dp_100"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adapter_news_single_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_2"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/md_black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toStartOf="@id/adapter_news_single_image_iv"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="皮特朱失恋无心直播，Lisa见状让曾小贤救场，结果却笑料百出" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adapter_news_single_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_grey_400"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_news_single_title_tv"
        tools:text="悠悠哉哉" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adapter_news_single_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/md_grey_400"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_news_single_author_tv"
        app:layout_constraintTop_toBottomOf="@id/adapter_news_single_title_tv"
        tools:text="11评" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adapter_news_single_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/md_grey_400"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_news_single_comment_tv"
        app:layout_constraintTop_toBottomOf="@id/adapter_news_single_title_tv"
        tools:text="4个小时前" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/adapter_news_single_image_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/dp_70"
        android:maxWidth="@dimen/dp_100"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/adapter_news_single_title_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/adapter_news_single_isvideo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/dp_20"
        android:maxWidth="@dimen/dp_20"
        android:src="@mipmap/ic_video_play"
        app:layout_constraintBottom_toBottomOf="@id/adapter_news_single_image_iv"
        app:layout_constraintEnd_toEndOf="@id/adapter_news_single_image_iv"
        app:layout_constraintStart_toStartOf="@id/adapter_news_single_image_iv"
        app:layout_constraintTop_toTopOf="@id/adapter_news_single_image_iv" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adapter_news_single_image_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:textColor="@color/md_white"
        android:background="@color/color_image_num"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@id/adapter_news_single_image_iv"
        app:layout_constraintEnd_toEndOf="@id/adapter_news_single_image_iv"
        tools:text="37图" />


</android.support.constraint.ConstraintLayout>