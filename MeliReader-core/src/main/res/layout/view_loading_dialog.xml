<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_loading_dialog"
    android:padding="@dimen/dp_20"
    tools:layout_editor_absoluteX="74dp"
    tools:layout_editor_absoluteY="291dp">


    <ProgressBar
        android:id="@+id/view_loading_dialog_pb"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@anim/loading_progress" />


    <TextView
        android:id="@+id/view_loading_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/md_black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_loading_dialog_pb"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

</android.support.constraint.ConstraintLayout>