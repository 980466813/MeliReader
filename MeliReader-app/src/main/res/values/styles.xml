<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="HintError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/md_red_500</item>
    </style>

    <style name="BottomDialogStyle">
        <!-- 对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/bottomDialogAnim</item>
        <!-- 背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 动画 -->
    <style name="bottomDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="tabSelectedTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/md_red_500</item>
    </style>

    <style name="expandedTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_black</item>
    </style>

    <style name="collapsedTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_black</item>
    </style>
</resources>